---
import '../styles/image.css';

interface Props {
    className?: string;
    width?: string;
    height?: string;
    filename: string;
    altText: string;
}

const {
    className,
    width,
    height,
    filename = "",
    altText = ""
} = Astro.props as Props;
const assetUrl : string = "https://assets.tommyoldfield.co.uk/";
---

<picture {className}>
    <source srcset=`${assetUrl}${filename}.avif` type="image/avif">
    <source srcset=`${assetUrl}${filename}.webp` type="image/webp">
    <img src=`${assetUrl}${filename}.jpeg` alt={altText} loading="lazy" {width} {height}>
</picture>
